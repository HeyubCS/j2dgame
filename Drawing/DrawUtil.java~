public class DrawUtil
{
   public static final int  GRID_SIZE = 50;
   public static final int  GRID_LENGTH = 2500;
   public static final int  GRID_COUNT = 50; //GRID_LENGTH / GRID_SIZE
   public int[] createXAxis(int gridSize, int gridCount)
   {
      int[] xLines = new int[gridCount];
      for(int i = 0; i < gridCount; i++)
      {
         xLines[i] = (i * gridSize);
      }
      return xLines;
   }

   public int[] createYAxis(int gridSize, int gridCount)
   {
      int[] yLines = new int[gridCount];
      for(int i = 0; i < gridCount; i++)
      {
         yLines[i] = (i * gridSize);
      }
      return yLines;
   }

}
